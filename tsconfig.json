{
  // Setup source directory.
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    // Do not compile with TSC.
    "noEmit": true,
    // Use latest ES typings.
    "lib": ["esnext"],
    // Do not transpile modules.
    "module": "esnext",
    // Transpile with latest ES Features.
    "target": "esnext",
    // Allow to use node modules.
    "moduleResolution": "node",

    // Support imports from JSON files.
    "resolveJsonModule": true,

    // Strict type checks.
    "strict": true,

    // Syntetically allow to use default imports from CJS modules.
    "allowSyntheticDefaultImports": true,

    // Dead code checks.
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Possible bug checks.
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  }
}
